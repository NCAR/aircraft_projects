	  <variable longname="Raw Dynamic Pressure, Windscreen" name="QCTF" units="hPa"/>
	</sample>
	<sample id="2">
	  <variable longname="Temperature of QCTF Probe" name="QCTFTEMP" units="deg_C"/>
