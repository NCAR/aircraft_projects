            <poly units="V">
            </poly>
          </variable>
        </sample>
      </sensor>

      <output class="RawSampleOutputStream">
        <socket type="mcrequest"/>
      </output>
    </dsm>

    <dsm id="5" location="radome" name="dsm305" rserialPort="30002" statusAddr="sock::30001">
      <sensor IDREF="CHRONY_TRACKING_LOG" id="105" suffix="_305"/>

