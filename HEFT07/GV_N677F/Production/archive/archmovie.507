#   Source file directory
#set SDIR = "/scr/beaton/#"
#
#   Destination MSS bitfile directory/subdirectory
#set DDIR = "/ATD/DATA/yyyy/proj/C130_N130AR"
#set DDIR = "/ATD/DATA/yyyy/proj/GV_N677F"
