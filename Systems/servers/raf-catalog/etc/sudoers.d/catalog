#
# /etc/sudoers.d/catalog: sudoers config for catalog user
#
# edit this file via:
#
#  visudo -f raf-catalog/etc/sudoers.d/catalog
#
# check syntax of this file via:
#
#  visudo -c -f raf-catalog/etc/sudoers.d/catalog
#

Cmnd_Alias CATALOG_COMMANDS = /usr/bin/rpm, /usr/bin/yum, /bin/systemctl * catalog-maps*, /usr/sbin/service catalog-maps *, /bin/journalctl -u catalog-maps*, /bin/journalctl --unit catalog-maps*

Cmnd_Alias IRCBOT_COMMANDS = /bin/systemctl * irc-bot*, /usr/sbin/service irc-bot *, /bin/journalctl -u irc-bot*, /bin/journalctl --unit irc-bot*

Cmnd_Alias DOCKER_COMMANDS = /bin/systemctl * docker*, /usr/sbin/service docker *, /bin/journalctl -u docker*, /bin/journalctl --unit docker*

catalog ALL= NOPASSWD: CATALOG_COMMANDS
catalog ALL= NOPASSWD: IRCBOT_COMMANDS
catalog ALL= NOPASSWD: DOCKER_COMMANDS
