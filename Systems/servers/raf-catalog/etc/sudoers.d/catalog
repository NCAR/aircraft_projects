Cmnd_Alias CATALOG_COMMANDS = /usr/bin/rpm, /usr/bin/yum, /bin/systemctl * catalog-maps*, /usr/sbin/service catalog-maps *

catalog ALL= NOPASSWD: CATALOG_COMMANDS
