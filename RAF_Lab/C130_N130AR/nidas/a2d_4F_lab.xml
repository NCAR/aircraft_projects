            </sample>
            <sample id="2" rate="1">
                <parameter name="temperature" value="true" type="bool"/>
                <variable name="A2DTEMP_BIGBLU" units="deg_C" longname="A2D Temperature"/>
            </sample>
        </sensor>

        <output class="RawSampleOutputStream">
            <socket type="mcrequest"/>
        </output>
    </dsm>

