                    <parameter name="corSlope" value="1.04948" type="float"/> <parameter name="corIntercept" value="-0.232775" type="float"/>
                </variable>
<!-- A2D018_CH2_1T          | 2008-02-15 22:25:35 | {-0.263069,1.06153} -->
